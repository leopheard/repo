<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
  id="repository.leopheard"
  name="leopheard Add-ons"
  version="1.0.0"
  provider-name="leopheard">
  <requires>
    <import addon="xbmc.addon"
            version="15.0.0"/>
  </requires>
  <extension point="xbmc.addon.repository"
             name="leopheard's Add-on Repository">
    <info compressed="true">http://raw.github.com/leopheard/repository.leopheard/isengard/addons.xml</info>
    <checksum>http://raw.github.com/leopheard/repository.leopheard/isengard/addons.xml.md5</checksum>
    <datadir zip="true">http://raw.github.com/leopheard/repository.leopheard/isengard/download</datadir>
    <hashes>false</hashes>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Install Add-ons from leopheard's repository</summary>
    <summary lang="us">Install Add-ons from leopheard's repository</summary>
    <description lang="en">Download and install add-ons from the leopheard's addon repository.</description>
    <description lang="us">Download and install add-ons from the leopheard's addon repository</description>
    <disclaimer lang="en">A series of addons for mostly podcasts or independent news</disclaimer>
    <disclaimer lang="us">A series of addons for mostly podcasts or independent news</disclaimer>
    <platform>all</platform>
    <nofanart>false</nofanart>
  </extension>
</addon>
